<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/textDistrict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select District"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinnerDistrict"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/textStation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Police Station"
        android:textSize="18sp"
        android:layout_marginTop="20dp" />

    <Spinner
        android:id="@+id/spinnerStation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:spinnerMode="dropdown" />

    <Button
        android:id="@+id/buttonSetDefaultStation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set as Default Station"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal" /> <!-- Example: to center the button -->
    <!-- Removed app: attributes -->
    <!-- app:layout_constraintTop_toBottomOf="@id/spinnerStation" -->
    <!-- app:layout_constraintStart_toStartOf="parent" -->
    <!-- app:layout_constraintEnd_toEndOf="parent" -->

</LinearLayout>
